				:type => "text/css",
				:href => "http://fonts.googleapis.com/css?family=Source+Sans+Pro"}
		%link{:rel => "shortcut icon",
				:href => "/img/favicon.ico"}
		%link{:rel => "stylesheet",
				:type => "text/css",
