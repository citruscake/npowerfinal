		%link{:rel => "stylesheet",
				:type => "text/css",
				:href => "/css/styles.css"}
		
	%body
		#app_container.container-fluid
			#app_header.row-fluid
				#app_nav.span6
					.row-fluid
						.span5
							#brand_frame
								.brand
									%img{:src => "/img/titleimage.png"}
						.span7
							.navbar
								.navbar-inner
									%ul{:class => 'nav', :id => 'app_menu'}
										%li{:id => "timer_view_link"}
											%a{:href => "#"}
												My timings
										%li{:id => "summary_view_link"}
											%a{:href => "#"}
												My savings
										%li{:style => "padding:15px 15px 15px 15px;",
											:id => "info_frame_link"}
											%a{:href => "#"}
												?
				#app_tariff_data.span4.pull-right
					.row-fluid
						.span12
							#totals_frame.row-fluid
								#total_left_frame.span6
									#total_time_label
										Time remaining :
									#total_time
								#total_right_frame.span6
									#total_cost_label
										Total spend : 
									#total_cost
						//#total_time_frame.span6.pull-right
						//#total_time.pull-right
					.row-fluid
						#tariff_options_frame.span8.pull-right
			#page_container.row-fluid.clearfix
			#app_footer.row-fluid
				#reset_frame.span2.pull-right
					%a{:href => '#',
						:id => 'reset_app_link'}
						Reset app?
				#welcome_frame.span2.pull-right
		#app_templates