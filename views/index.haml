		%script{:type => "text/javascript",
				:src => "/js/libs/backbone.js"}
		%script{:type => "text/javascript",
				:src => "/js/libs/jquery.timer.js"}
		%script{:type => "text/javascript",
				:src => "/js/formatting.js"}
		%script{:type => "text/javascript",
				:src => "/js/appliance_models.js"}
		%script{:type => "text/javascript",
				:src => "/js/user_model.js"}
